PKGNAME=zlib
PKGDES="A Massively Spiffy Yet Delicately Unobtrusive Compression Library"
PKGDEP=glibc
PKGSEC=libs

ABSHADOW=no
AB_FLAGS_O3=1

MAKE_AFTER="AR=gcc-ar RANLIB=gcc-ranlib"

# Note: Extra Provides for Spiral (Debian compatibility).
PKGPROV="zlib1g_spiral zlib1g-dev_spiral"

# Note: Debian's Zlib is currently at 1:.
PKGEPOCH_SPIRAL=1

PKGESS=1
