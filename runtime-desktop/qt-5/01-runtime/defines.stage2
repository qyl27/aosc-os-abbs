        xcb-util-wm xdg-utils zlib"
PKGDEP__LOONGSON3="${PKGDEP_NOWEBENGINE}"
PKGDEP__MIPS64R6EL="${PKGDEP_NOWEBENGINE}"
PKGDEP__PPC64EL="${PKGDEP_NOWEBENGINE}"
PKGDEP__RISCV64="${PKGDEP_NOWEBENGINE}"

ABTYPE=self

NOSTATIC=0
